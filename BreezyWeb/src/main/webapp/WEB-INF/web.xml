<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:web="http://java.sun.com/xml/ns/javaee" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Windhaven Consulting - Breezy</display-name>
  
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>cupertino</param-value>
	</context-param>

	<context-param>
	    <param-name>org.apache.myfaces.SERIALIZE_STATE_IN_SESSION</param-name>
	    <param-value>false</param-value>
	</context-param>	

	<web:env-entry>
		<web:env-entry-name>breezy.macrosResourcePath</web:env-entry-name>
		<web:env-entry-type>java.lang.String</web:env-entry-type>
		<web:env-entry-value>/Breezy/Resources/Macros</web:env-entry-value>
	</web:env-entry>
	
	<web:env-entry>
		<web:env-entry-name>breezy.eventsResourcePath</web:env-entry-name>
		<web:env-entry-type>java.lang.String</web:env-entry-type>
		<web:env-entry-value>/Breezy/Resources/Events</web:env-entry-value>
	</web:env-entry>
	
	<web:env-entry>
		<web:env-entry-name>breezy.boardsResourcePath</web:env-entry-name>
		<web:env-entry-type>java.lang.String</web:env-entry-type>
		<web:env-entry-value>/Breezy/Resources/Boards</web:env-entry-value>
	</web:env-entry>
	
	<web:env-entry>
		<web:env-entry-name>breezy.releaseRevisionNumber</web:env-entry-name>
		<web:env-entry-type>java.lang.String</web:env-entry-type>
		<web:env-entry-value>.8</web:env-entry-value>
	</web:env-entry>
	
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/views/error.jsf</location>
	</error-page>

</web-app>